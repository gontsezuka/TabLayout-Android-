<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <!--HEADER START -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    >

                    <ImageView
                        android:layout_width="487dp"
                        android:layout_height="184dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_blacktrim"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/convener_dashboard_txt_header"
                        android:textColor="#ffffff"
                        android:textSize="21dp"
                        android:textStyle="bold"></TextView>


                </LinearLayout>
                <!-- HEADER END -->

                <!-- BODY ITEMS START -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/lightgray"
                    android:layout_marginTop="310dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >
                    <!-- 1. HORIZONTAL  ITEM START -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="215dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/fingerprint_image"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_fingerprint_24"
                                    android:layout_centerInParent="true"
                                    >
                                </ImageView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/convener_dashboard_txt_enroll"
                                    android:textSize="16sp"
                                    android:layout_centerInParent="true"
                                    android:layout_below="@+id/fingerprint_image"
                                    ></TextView>
                                <Button
                                    android:layout_margin="30dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/convener_dashboard_btn_enroll"
                                    android:background="@android:color/transparent"
                                    ></Button>

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/meetings_image"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_forum_24"
                                    android:layout_centerInParent="true"
                                    >
                                </ImageView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/convener_dashboard_txt_meetings"
                                    android:textSize="16sp"
                                    android:layout_centerInParent="true"
                                    android:layout_below="@+id/meetings_image"
                                    ></TextView>
                                <Button
                                    android:id="@+id/convener_dashboard_btn_meetings"
                                    android:layout_margin="30dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:textColor="#ffffff"
                                    android:layout_centerInParent="true"
                                    >

                                </Button>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <!-- 1. HORIZONTAL ITEM END -->




                    <!-- 2. HORIZONTAL ITEM START -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="215dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/time_image"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_access_time_24"
                                    android:layout_centerInParent="true"
                                    >
                                </ImageView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/convener_dashboard_txt_verify"
                                    android:textSize="16sp"
                                    android:layout_centerInParent="true"
                                    android:layout_below="@+id/time_image"
                                    ></TextView>


                                <Button
                                    android:id="@+id/convener_dashboard_btn_time_attendance"
                                    android:layout_margin="30dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:textColor="#ffffff"
                                    android:layout_centerInParent="true"
                                    >

                                </Button>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/logout_image"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
        